@{
    ViewBag.Title = "Index";
}
@model Scoring.Models.scoring_employee
<link rel="stylesheet" href="http://v3.bootcss.com/examples/signin/signin.css">
<link href="/Content/select2.css" rel="stylesheet" type="text/css" />
<script src="/Content/select2.min.js" type="text/javascript"></script>
<script src="/Content/select2_locale_zh-CN.js" type="text/javascript"></script>
@*<script type="text/javascript">
    $(function () {
        $("#e1").select2();
